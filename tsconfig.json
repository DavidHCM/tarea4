{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}